<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ithub.iinventory">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".StartActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".StartActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AddItemActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MakeBillActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ChatActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".All_ItemsActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".LastSaleActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AllSalesActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CustomLayout"
            android:parentActivityName=".MakeBillActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".PrinterService"
            android:launchMode="singleTask"
            android:parentActivityName=".CustomLayout"
            android:screenOrientation="landscape" />
        <activity android:name=".UpdateItemAcitivity"
            android:screenOrientation="landscape"
            android:parentActivityName=".All_ItemsActivity"></activity>
    </application>

</manifest>